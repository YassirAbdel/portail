{% extends 'base.html.twig' %}

{% block title 'Portail documentaire - Accueil' %}

{% block body %}
	<div class="jumbotron text-center">
		<h1>Portail documentaire de la médiathèque du CND</h1>
		<p>
            Quanta autem vis amicitiae sit, ex hoc intellegi maxime potest, quod ex infinita societate generis humani, quam conciliavit ipsa natura, ita contracta res est et adducta in angustum ut omnis caritas aut inter duos aut inter paucos iungeretur.
        </p>
	</div>
	<div class="container">
			{{ form_start(form) }}
			<div class="form-row align-items-end">
				<div class="col">
					{{ form_row(form.titre) }}
				</div>
				<div class="col">
					{{ form_row(form.auteur) }}
				</div>
				<div class="col">
					{{ form_row(form.type) }}
				</div>
				
				<div class="col">
					{{ form_row(form.persons) }}
				</div>
			</div>
			<div class="form-row align-items-end">
				<div class="col">
					{{ form_row(form.texte) }}
				</div>
			</div>
			<div class="form-row align-items-end">
				<div class="col">
					<!--  class form-group aligne le bouton  -->
					<div class="form-group">
						<button class="btn btn-primary">Rechercher</button>
					</div>
				</div>
			</div>
	   {{ form_end(form) }}
<div class="container mt-4">
		{# display navigation #}
		<div class="navigation">
			{{ knp_pagination_render(resources) }}
		</div>
	<h2>Les dernières ressources</h2>
	<div class="row">
		{% for resource in resources %}
			<div class="col-md-4">
				{% include '/resource/_resource.html.twig' %}
			</div>
		{% endfor %}
	</div>
	</div>
	{# display navigation #}
	<div class="navigation">
		{{ knp_pagination_render(resources) }}
	</div>
</div>

{% endblock %}