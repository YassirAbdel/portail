{% extends 'base-frontoffice.html.twig' %}
{% block title 'Portail documentaire - Accueil' %}
{% block body %}
<section class="wrapper">
  <div class="inner align-center" style="text-align:left;margin-left:1em;">
    <h2>Votre sélection</h2>
    </div>
    <table class="table table-striped table-borderless table-sm table-responsive-xl" style="width:80%;margin-left:1em;">
      <thead class="thead-dark" >
        <tr>
          <th scope="col" style="background-color:#bf6f33;">id</th>
          <th scope="col" style="background-color:#bf6f33;">Type de ressource</th>
          <th scope="col" style="background-color:#bf6f33;">Titre</th>
          <th scope="col" style="background-color:#bf6f33;">Auteur</th>
        </tr>
      </thead>
      <tbody>
       {% set resources = app.session.get('panier') %}
            
       {% for resource in resources %}
            <tr>
              <th scope="row">{{ resource.id }}</th>
              <td>{{ resource.type }}</td>
              <td>{{ resource.title }}</td>
              <td>{{ resource.auteur }}</td>
            </tr>
       {% endfor %}
      </tbody>
    </table>
    <div class="inner align-center" style="text-align:left;margin-left:1em;">
    <h2>Enregistrer votre séletion</h2>
    {{ include('basket/_form.html.twig') }}
    </div>
    </section>
    
{% endblock %}
