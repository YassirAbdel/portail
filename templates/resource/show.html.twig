						div class="image" style="display:none;">
						</div>
						-->
					</section>

	<section class="et-hero-tabs">
  	<!--
    <h1>STICKY SLIDER NAV</h1>
    <h3>Sliding content with sticky tab nav</h3>
	-->
    <div class="et-hero-tabs-container" data-sticky="data-sticky" data-top-tigger="350" data-state="fixed" >
		<!-- <h1>En savoir plus</h1> -->
	  
	  {% for person in  resource.persons %}
	  {% if person.id %}
	  <a class="et-hero-tab" href="#tab-es6">Personne</a>
	  {% endif %}
	  {% endfor %}
	  {% for work in  resource.works %}
	  {% if work.id %}
	  <a class="et-hero-tab" href="#tab-react">Oeuvre</a>
	  {% endif %}
	  {% endfor %}
	  {% for structure in  resource.structures %}
	  {% if structure.id %}
	  <a class="et-hero-tab" href="#tab-angular">Structure</a>
	  {% endif %}
	  {% endfor %}
      <!--<a class="et-hero-tab" href="#tab-voiraussi">Voir aussi</a>-->
      <span class="et-hero-tab-slider"></span>

    </div>
  </section>


  <!-- Main -->
  <main class="et-main">
	<section class="ensavoirplus" id="" style="">
	{% if resource.persons %}
	{% for person in  resource.persons %}
	<h1>{{ person.name }}</h1>
	<div id="tab-es6"></div>
		{{ person.abstract|raw }}  
	{% endfor %}
	{% endif %}   
    </section>
    <section class="ensavoirplus" id="">
	{% if resource.works %}
	{% for work in  resource.works %}
	<h1>{{ work.name }}</h1>
	<div id="tab-react"></div>
		{{ work.abstract|raw }}
	{% endfor %}
	{% endif %}    
	</section>
	<section class="ensavoirplus" id="">
		{% if resource.structures %}
		{% for structure in  resource.structures %}
		<h1>{{ structure.name }}</h1>
		<div id="tab-angular"></div>
			{{ structure.abstract|raw }}
		{% endfor %}
		{% endif %}    
		</section>
  </main>

				<section class="wrapper style1 align-center">
						<div class="inner medium">
							<h2>Vous avez une question</h2>
							<form method="post" action="#">
								<div class="fields">
									<div class="field half">
										<label for="name">Nom</label>
										<input type="text" name="name" id="name" value="" />
									</div>
									<div class="field half">
										<label for="email">Email</label>
										<input type="email" name="email" id="email" value="" />
									</div>
									<div class="field">
										<label for="message">Message</label>
										<textarea name="message" id="message" rows="6"></textarea>
									</div>
								</div>
								<ul class="actions special">
									<li><input type="submit" name="submit" id="submit" value="Envoyer" /></li>
								</ul>
							</form>

						</div>
					</section>
{% endblock %}
