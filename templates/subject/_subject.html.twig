<div class="card mb-4 img-responsive">
    {% if subject.filename %}
		<a href="{{ path('subject.show', {slug: subject.slug, id: subject.id }) }}"><img class="card-img-top" alt="Consulter la ressource" title="Consulter la ressource" src="{{ vich_uploader_asset(subject, 'imageFile') | imagine_filter('thumb') }}" class="responsive" width="360" height="auto"></a>
		{% elseif subject.img %}
		<a href="#"><img class="card-img-top" alt="Consulter la ressource" title="Consulter la ressource" src="http://cadic.cnd.fr/exl-img/{{ subject.img|replace({'.jpg': '_cadichd.jpg'}) }}" class="responsive" width="360" height="auto"></a>
		{% else %}
		<a href="#"><img class="card-img-top" alt="Consulter la ressource" title="Consulter la ressource" src="{{ '/images/subjects/empty.jpg' | imagine_filter('thumb') }}" class="responsive" width="360" height="auto"></a>
    {% endif %}
    <div class="caption">
      <h3>{{ subject.title }}</h3>
      <h4>{{ subject.subTitle }}</h4>
      <ul class="actions fixed">
        <li><span class="button small"><a href="{{ path('subject.show', {slug: subject.slug, id: subject.id }) }}">Details</a></span></li>
      </ul>
    </div>
